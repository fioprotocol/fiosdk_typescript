{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": false,
      "strict": true,
      "target": "es2015",
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationMap": true
